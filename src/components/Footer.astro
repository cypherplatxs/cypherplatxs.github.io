---
import { Icon } from "astro-icon";
// component from flowbite
---

<footer
  class="p-4 bg-white sm:p-6 dark:bg-zinc-900 mx-auto max-w-6xl sticky top-[100vh] underline-offset-2"
>
  <div class="md:flex md:justify-between">
    <div class="mb-6 md:mb-0 flex flex-col">
      <a href="/" class="flex items-center" aria-label="mountain icon">
        <Icon name="lucide:heart" class="w-8 h-8" />
        <span
          class="self-center text-2xl whitespace-nowrap dark:text-white ml-3 mt-1"
          >Cypherplatxs</span
        >
      </a>
      <p class="text-base text-zinc-600 dark:text-zinc-300 mt-3">
        Layer 0 gardeners from Platohedro.org
      </p>
    </div>
    <div class="grid grid-cols-2 gap-8 sm:gap-6 sm:space-x-10 text-base">
      <div>
        <h2 class="mb-6 text-sm text-zinc-900 uppercase dark:text-white">
          Find more
        </h2>
        <ul class="text-zinc-800 dark:text-zinc-300">
          <li class="mb-4">
            <a
              href="https://platohedro.org/"
              class="hover:underline"
              target="_blank">Platohedro web</a
            >
          </li>
          <li>
            <a
              href="https://t.me/+v1XXtUHViV5iYmQx"
              class="hover:underline"
              target="_blank">Telegram</a
            >
          </li>
        </ul>
      </div>
      <div>
        <h2 class="mb-6 text-sm text-zinc-900 uppercase dark:text-white">
          Follow us
        </h2>
        <ul class="text-zinc-800 dark:text-zinc-300">
          <li class="mb-4">
            <a
              href="https://github.com/platohedro"
              class="hover:underline"
              target="_blank">Github</a
            >
          </li>
          <li>
            <a
              href="https://twitter.com/platohedro"
              class="hover:underline"
              target="_blank">Twitter</a
            >
          </li>
        </ul>
      </div>
    </div>
  </div>
</footer>
