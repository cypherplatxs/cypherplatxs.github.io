---
import Layout from "@layouts/Layout.astro";
import Footer from "@components/Footer.astro";
import Counter from "@components/Counter.astro";
import counter from "@content/counter.json";
import { homepage } from "@content/homepage";
import Features from "@components/Features.astro";
---

<Layout>
  <section class="grid py-10 place-items-center text-center">
    <img
      src="https://cypherplatxs.github.io/web/images/logo%20cypherplatxs.gif"
      alt=""
    />

    <h1 class="text-4xl mb-5 mt-5">Cypherplatxs</h1>
    <p class="">Layer 0 gardeners from Platohedro.org</p>
  </section>
  {
    homepage.map((homepage) => (
      <Features
        title={homepage.title}
        icon={homepage.icon}
        content={homepage.content}
      />
    ))
  }
  <section
    class="py-20 sm:flex sm:items-center sm:justify-evenly text-center sm:text-left"
  >
    {
      (
        <ul class="grid sm:grid-cols-3 gap-16">
          {counter.map((counter) => (
            <Counter number={counter.number} label={counter.label} />
          ))}
        </ul>
      )
    }
  </section>
  <Footer />
</Layout>
